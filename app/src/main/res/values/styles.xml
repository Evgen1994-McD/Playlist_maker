<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="Switch_Style" parent="Widget.AppCompat.CompoundButton.Switch">
            <item name="trackTint">@color/switch_track_color</item>
            <item name="thumbTint">@color/switch_thumb_color</item>
        </style>

    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/standart_padding_start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="cornerRadius">@dimen/standart_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/st_padding_icon</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>


    </style>

    <style name="MyToolbar_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Toolbar_height</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TitleTextStyle</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>


    </style>

    <style name="MySettings_Toolbar_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Toolbar_height</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="navigationIcon">@drawable/ic_backblack_16</item>
        <item name="titleTextAppearance">@style/TitleTextStyle</item>


    </style>


    <style name="Search_Toolbar_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Toolbar_height</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="navigationIcon">@drawable/ic_backblack_16</item>
        <item name="android:textSize">@dimen/st_head_text_size</item>

    </style>






    <style name="MySettingsStyle" parent="Widget.MaterialComponents.TextView">

        <item name="android:paddingHorizontal">@dimen/standart_padding_start</item>
        <item name="android:paddingVertical">@dimen/standart_padding_vertical</item>
        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>




    </style>


    <style name="Day_night_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Settings_Day_night_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="background">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">vertical</item>

    </style>



    <style name="Search_Base_style" parent="Widget.AppCompat.EditText">

        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:hint">@string/Search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingVertical">@dimen/st_padding_icon</item>
        <item name="android:paddingHorizontal">@dimen/standart_radius</item>
        <item name="android:textColorHint">@color/thumbTint_off</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="iconSize">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textShortMessage</item>
        <item name="android:maxLength">50</item>
        <item name="android:drawableStart">@drawable/ic_hintsearch_16</item>

    </style>


    <style name="tracl_item_top" parent="Widget.MaterialComponents.TextView">
<item name="android:textColor">@color/black_track_item</item>
        <item name="font">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/standart_text_size</item>


    </style>

    <style name="track_item_bottom" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/thumbTint_off</item>
        <item name="font">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/txt_11</item>
    </style>



    <style name="msg_nts_nointernet_style" parent="Widget.MaterialComponents.TextView">
        <item name="font">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/msg_nts_txtsize</item>
        <item name="android:layout_marginHorizontal">@dimen/size_dp_24</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="msg_nointernet_button" parent="TextAppearance.AppCompat.Button">
        <item name="font">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_nts_txtsize_14sp</item>
        <item name="android:text">@string/txt_nointernet_button</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/button_nointernet_padding_6dp</item>
        <item name="android:paddingVertical">@dimen/button_nointernet_padding_6dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/button_nointernet_radius_54dp</item>
        <item name="textAllCaps">false</item>

    </style>




</resources>




<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="16dp"
        android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#E6E8EB" /> <!-- Цвет области ввода текста -->
            <corners android:radius="8dp" />   <!-- Скругление углов (опционально) -->
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >



    <ImageView
        android:id="@+id/trackImage"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="13dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="@dimen/size_dp_45"
        android:layout_width="@dimen/size_dp_45"
       />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"

        >

        <TextView
            android:id="@+id/track_name"
            style="@style/track_item_top"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="14dp"
            tools:text="Название трека" />

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="13dp"
    android:orientation="horizontal"
    android:layout_marginTop="1dp"
    android:layout_marginHorizontal="8dp"
    >
        <TextView
            android:id="@+id/track_info"
            android:layout_height="match_parent"
            android:layout_width="54dp"
            tools:text="Исполнитель"
            style="@style/track_item_bottom"


            />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dot_13"

        >

    </ImageView>

    <TextView
        android:id="@+id/track_time"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        tools:text="длительность"
        style="@style/track_item_bottom"

        />
    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <ImageView
        android:id="@+id/arrow1"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/size_dp_24"
        android:layout_width="@dimen/size_dp_24"
        android:src="@drawable/ic_arrow_24"
        android:layout_marginVertical="18dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"

        />

    </LinearLayout>

</LinearLayout>
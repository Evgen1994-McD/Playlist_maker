<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="0dp"
    android:id="@+id/settings"
    tools:context=".SettingsActivity"
    >




    <androidx.appcompat.widget.Toolbar
        android:id ="@+id/settings_toolbar_night"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/Settings_name"
        app:titleTextAppearance="@style/TitleTextStyle"
        app:titleTextColor="@color/white"
        >


    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        android:text="@string/dark_theme"
        android:textSize="16sp"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color"
        android:textColor="@color/white"
        />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:drawableEnd="@drawable/share_dark"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        android:text="@string/share_name"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:drawableEnd="@drawable/dark_mode_support"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        android:text="@string/support_name"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:drawableEnd="@drawable/user_assets_dark"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        android:text="@string/user_assets_name"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

</LinearLayout>


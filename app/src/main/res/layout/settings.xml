<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp"
     android:id="@+id/settings"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    tools:context=".SettingsActivity"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/backToMain"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@drawable/backlight"
android:padding="4dp"
            android:backgroundTint="@color/white"
            >
        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/Settings_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center_vertical"/>




        <!-- Переключатель -->


    </LinearLayout>

    <Switch
        android:id="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61"
        android:layout_marginTop="24dp"
        android:buttonTint="#9FBBF3"
        android:paddingStart="@dimen/standart_padding_start"
        android:text="@string/dark_theme"
        android:textSize="@dimen/standart_text_size"
        android:textColor="#1A1B22"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:thumbTint="@color/thumbTint_light"
        android:trackTint="@color/trackTint_light"
        android:gravity="center_vertical"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingStart="@dimen/standart_padding_start"
            android:text="@string/share_name"
            android:textColor="#1A1B22"
            android:textSize="@dimen/standart_text_size"
            android:gravity="center_vertical"/>

        <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:src="@drawable/sharelight"
        android:padding="4dp"
            android:layout_marginEnd="20dp"
        android:backgroundTint="#ffffff"
            android:layout_gravity="end"
        >
    </ImageButton>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:text="@string/support_name"
        android:textColor="#1A1B22"
        android:textSize="@dimen/standart_text_size"
        android:paddingStart="@dimen/standart_padding_start"
        android:gravity="center_vertical"
       />

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:src="@drawable/support_new"
android:layout_gravity="end"
        android:padding="4dp"
        android:backgroundTint="#ffffff"
        >
    </ImageButton>

</FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61"

        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:paddingStart="@dimen/standart_padding_start"
            android:text="@string/user_assets_name"
            android:textColor="#1A1B22"
            android:textSize="@dimen/standart_text_size"
            android:gravity="center_vertical"/>

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:backgroundTint="#ffffff"
            android:padding="4dp"
            android:src="@drawable/userassetlight"
            android:layout_gravity="end">

        </ImageButton>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="476">

    </FrameLayout>

</LinearLayout>

